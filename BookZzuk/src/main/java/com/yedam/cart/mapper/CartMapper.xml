<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yedam.cart.mapper.CartMapper">
	<!-- 장바구니 담기 시작 -->
	<insert id="cartAdd" parameterType="CartVO">
		INSERT INTO cart
		VALUES ( cart_pk_seq.nextval
		       , #{userId}
		       , #{itemId}
		       , 1 )
	</insert>
	<!-- 장바구니 담기 끝 -->
	<!-- 장바구니 목록 조회 시작 -->
	<select id="getCartList" resultType="BookVO">
		SELECT b.item_id "ITEM_ID"
      		 , cover
       		 , title
        	 , sale_price
       		 , std_price
       		 , item_cnt
    	  FROM member m, book b, cart c
   		 WHERE c.user_id = m.user_id
     	   AND c.item_id = b.item_id
     	   AND m.user_id = #{uid}
	</select>
	<!-- 장바구니 목록 조회 끝 -->
	<!-- 장바구니 갯수 설정 시작 -->
	<update id="addCnt" >
		UPDATE cart
		   SET item_cnt = #{itemCnt}
		 WHERE user_id  = #{uid}
		   AND item_id  = #{itemId}
	</update>
	<!-- 장바구니 갯수 설정 끝 -->
	<!-- 장바구니 삭제 기능 시작 -->
	<delete id="delCart" parameterType="string">
		DELETE cart
		 WHERE user_id = #{uid}
		   AND item_id = #{itemId}
	</delete>
	<!-- 장바구니 삭제 기능 끝 -->
	<!-- 장바구니 전체 삭제 기능 시작 -->
	<delete id="allDelete" parameterType="string">
		DELETE cart
		 WHERE user_id = #{uid}
	</delete>
	<!-- 장바구니 전체 삭제 기능 끝 -->
</mapper>